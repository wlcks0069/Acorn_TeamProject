		<typeAlias type="pack.cm_controller.CMBoardBean" alias="cmbean" />
		<typeAlias type="pack.cm_model.CMBoardDto" alias="cmdto" />
	</typeAliases>
	
	<mappers>
		<mapper resource="pack/resource/GPMemberDataMapper.xml" />
		<mapper resource="pack/resource/MCBoardDataMapper.xml" />
		<mapper resource="pack/resource/PPDataMapper.xml" />
